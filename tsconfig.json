{
  "compilerOptions": {
    "target": "ES6", // Set the JavaScript version to output
    "module": "commonjs", // Specify the module system
    "strict": true, // Enable strict type checking options
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your source files
    "baseUrl": "./", // Base directory to resolve non-relative module names
    "paths": {
      "*": [
        "node_modules/*",
        "@types/*"
      ] // Resolve modules and custom types
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": false,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    "@types/**/*",
    ".next/types/**/*.ts"
  ], // Include all TypeScript files in src and types
  "exclude": [
    "node_modules",
    ".next"
  ] // Exclude node_modules and .next directories
}
